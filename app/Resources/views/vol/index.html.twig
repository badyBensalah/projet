{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vols list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numvol</th>
                <th>Datedepart</th>
                <th>Datearrivee</th>
                <th>Villedepart</th>
                <th>Villearrivee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
            <tr>
                <td><a href="{{ path('vol_show', { 'id': vol.id }) }}">{{ vol.id }}</a></td>
                <td>{{ vol.numVol }}</td>
                <td>{% if vol.dateDepart %}{{ vol.dateDepart|date('Y-m-d') }}{% endif %}</td>
                <td>{% if vol.dateArrivee %}{{ vol.dateArrivee|date('Y-m-d') }}{% endif %}</td>
                <td>{{ vol.villeDepart }}</td>
                <td>{{ vol.villeArrivee }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vol_show', { 'id': vol.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vol_edit', { 'id': vol.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vol_new') }}">Create a new vol</a>
        </li>
    </ul>
{% endblock %}
