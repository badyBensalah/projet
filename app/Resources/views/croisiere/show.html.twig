{% extends 'base.html.twig' %}

{% block body %}
    <h1>Croisiere</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ croisiere.id }}</td>
            </tr>
            <tr>
                <th>Nombateau</th>
                <td>{{ croisiere.nomBateau }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if croisiere.dateDepart %}{{ croisiere.dateDepart|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datearrivee</th>
                <td>{% if croisiere.dateArrivee %}{{ croisiere.dateArrivee|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Villedepart</th>
                <td>{{ croisiere.villeDepart }}</td>
            </tr>
            <tr>
                <th>Villearrivee</th>
                <td>{{ croisiere.villeArrivee }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('croisiere_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('croisiere_edit', { 'id': croisiere.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
